    <% if (blargs.length > 0 ) { %>
        <% blargs.forEach(blarg => { %>
            <a class="single" href="/blarg/<%= blarg._id %>">
                <h3><%=blarg.title%></h3>
                <p><%=blarg.snippette%></p>
